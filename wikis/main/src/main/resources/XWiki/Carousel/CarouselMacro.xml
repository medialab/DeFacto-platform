    <property>
      <code>.xwiki-carousel {
  border: 1px solid #eaeaea;
  background: #fcfcfc;
  overflow: hidden; /** Prevent slide text to outgrow the carousel container in case of small screen width and when truncating the text is not enough. */
  .xwiki-carousel-slide-title {
    margin-top: 0;
    a {
      font-weight: bold;
      color: inherit;
    }
  }
  .item {
    padding: 2em;
  }
  .carousel-control {
    background-image: none;
    width: inherit;
  }
  .xwiki-carousel-slide-body {
    display: flex;
    flex-direction: column;
    .xwiki-carousel-slide-image {
      text-align: center;
      margin-bottom: 1em;
      img {
        max-width: 100%;
        max-height: 250px;
      }
    }
  }
  .xwiki-carousel-action {
    &amp;.xwiki-carousel-action-edit {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: #fff;
      font-size: 0.8em;
      text-align: center;
      width: 2em;
      padding: 4px;
      border: 1px solid #ddd;
      border-radius: 4px;
      color: inherit;
    }
  }
  &amp;.xwiki-carousel-mode-vertical {
    .xwiki-carousel-slide-body {
      flex-direction: column;
      .xwiki-carousel-slide-image {
        text-align: center;
        margin-bottom: 1em;
        img {
          max-width: 100%;
          max-height: 250px;
        }
      }
    }
  }
  .carousel-action-prev {
    left: 15px;
  }
  .carousel-action-next {
    right: 15px;
  }
}

@media (min-width: @screen-md-min) {
  .xwiki-carousel {
    /** height: 350px; */
    .xwiki-carousel-slide-body {
      flex-direction: row;
      .xwiki-carousel-slide-image {
        margin-right: 1em;
        img {
          height: 250px;
          width: 400px;
          object-fit: contain;
          max-width: inherit;
        }
      }
    }
    .item {
      padding: 2em 3.5em;
    }
    .carousel-action-prev {
      left: 30px;
    }
    .carousel-action-next {
      right: 30px;
    }
  }
}</code>
