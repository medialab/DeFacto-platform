    <property>
      <code>require(['jquery'], function($) {

  function openSocialMediaWindow(url) {
    var left = (screen.width - 540) / 2;
    var top = (screen.height - 400) / 2;
    var params = 'menubar=no,toolbar=no,status=no,width=540,height=400,top=' + top + ',left=' + left;
    window.open(url,'NewWindow',params);
  }

  function hasWebShareApi() {
    if (navigator !== undefined &amp;&amp; navigator.canShare)
      return true;
    else
      return false;
  }

  $('.xwiki-social-media-share-item a').on('click', function(e) {
    e.preventDefault();
    const href = $(this).attr('href');
    if (href) {
      openSocialMediaWindow(href);
    }
  });

  /**
  if (hasWebShareApi()) {
    // Deactivate dropdown menu on mobile since a native share will take over.
    // This also prevents the button to remain in pressed state once pressed.
    $('.xwiki-social-media-share-btn').attr('data-toggle', '');
    $('.xwiki-social-media-share-btn').on('click', function(e) {
      e.preventDefault();
        navigator.share({
        title: document.title,
        url: document.URL,
      });
    });
  } else {
    addSocialMediaButtons();
  }
  */
});
</code>
