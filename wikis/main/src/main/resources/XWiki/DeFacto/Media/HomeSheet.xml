#set ($discard = $xwiki.ssx.use('XWiki.DeFacto.Media.HomeSheet'))
  #set ($hql = "select doc.title, doc.fullName from XWikiDocument as doc, BaseObject as obj where obj.name = doc.fullName and obj.className = :class and doc.fullName not like '%Template%' order by doc.title")
  #set ($query = $services.query.hql($hql))
  #set ($discard = $query.bindValue('class', 'XWiki.DeFacto.Media.MediaClass'))
  #set ($entries = $query.execute())
  (% class="row" %)(((
    #foreach ($entry in $entries)
      #set ($r = $foreach.index % 3)
      #if ($foreach.index &gt; 0 &amp;&amp; $r == 0)
        (% class="clearfix" %)((()))
      #end
      (% class="col-xs-12 col-md-4" %)(((
        (% class="box defacto-box" %)(((
          #set ($mediaPage = $xwiki.getDocument($entry[1]))
          #set ($mediaObject = $mediaPage.getObject('XWiki.DeFacto.Media.MediaClass'))
          #set ($site = $mediaObject.getValue('site'))
          #set ($feed = $mediaObject.getValue('feed'))
          #set ($logo = $mediaObject.getValue('logo'))
          (% class="defacto-box-image" %)(((
            #if ("$!logo" != '')
              [[image:$entry[1]@$logo]]
            #end
          )))
          (% class="defacto-box-main" %)(((
            == [[$entry[0]&gt;&gt;$entry[1]]] ==
            (% class="defacto-media-metadata" %)(((
              #if ("$!site" != '')
              * [[Site&gt;&gt;$site]]
              #end
              #if ("$!feed" != '')
              * [[Fil RSS&gt;&gt;$feed]]
              #end
            )))
          )))
        )))
      )))
    #end
  )))
{{/velocity}}</content>
