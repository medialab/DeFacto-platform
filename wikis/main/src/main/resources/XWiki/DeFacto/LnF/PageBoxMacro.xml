    <property>
      <code>.defacto-box.defacto-page-box {
  display: flex;
  flex-direction: column;
  .defacto-box-image {
    margin-right: 1em;
    flex-basis: 30%;
    img {
      width: 100%;
      max-width: inherit;
      max-height: 300px;
      object-fit: contain;
    }
  }
  .defacto-box-body {
    flex-basis: 70%;
    flex-grow: 1; /** Let the body span the whole space when there is no image. */
    /** This is a fix for Factuel articles whose chapo is sometimes entirely bold. */
    strong {
      font-weight: normal;
    }
    .defacto-factcheck-date, .defacto-factcheck-source {
      text-align: right;
      font-style: italic;
      color: #666;
      font-size: 0.9em;
      p {
        margin: 0;
      }
    }
  }
}
